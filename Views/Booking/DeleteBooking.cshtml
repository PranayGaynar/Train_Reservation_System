@model TrainTicketReservationSystem.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this booking?</h4>
<hr />

<div>
    <h5>Booking Details</h5>
    <dl class="dl-horizontal">
        <dt>Booking ID</dt>
        <dd>@Model.BookingId</dd>

        <dt>User</dt>
        <dd>@Model.User.Name</dd>

        <dt>Train Route</dt>
        <dd>@Model.TrainRoute.SourceStation to @Model.TrainRoute.DestinationStation</dd>

        <dt>Seat Class</dt>
        <dd>@Model.SeatClass</dd>

        <dt>PNR</dt>
        <dd>@Model.PNR</dd>

        <dt>Amount</dt>
        <dd>@Model.Amount</dd>

        <dt>Cancelled</dt>
        <dd>@(Model.IsCancelled ? "Yes" : "No")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
