@model TrainTicketReservationSystem.Models.TrainRoute
@{
    ViewData["Title"] = "Delete Train Route";
}

<h2>Delete Train Route</h2>

<h3>Are you sure you want to delete this train route?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Train</dt>
        <dd class="col-sm-10">@Model.Train.TrainName</dd>
        <dt class="col-sm-2">Source Station</dt>
        <dd class="col-sm-10">@Model.SourceStation</dd>
        <dt class="col-sm-2">Destination Station</dt>
        <dd class="col-sm-10">@Model.DestinationStation</dd>
        <dt class="col-sm-2">Departure Time</dt>
        <dd class="col-sm-10">@Model.DepartureTime</dd>
        <dt class="col-sm-2">Arrival Time</dt>
        <dd class="col-sm-10">@Model.ArrivalTime</dd>
        <dt class="col-sm-2">Available Seats</dt>
        <dd class="col-sm-10">@Model.AvailableSeats</dd>
        <dt class="col-sm-2">Total Seats</dt>
        <dd class="col-sm-10">@Model.TotalSeats</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="TrainRouteId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
