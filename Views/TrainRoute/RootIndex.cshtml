@model IEnumerable<TrainTicketReservationSystem.Models.TrainRoute>
@{
    ViewData["Title"] = "Train Routes";
}

<h2>Train Routes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Route</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Train</th>
            <th>Source Station</th>
            <th>Destination Station</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Available Seats</th>
            <th>Total Seats</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var route in Model)
        {
            <tr>
                <td>@route.Train.TrainName</td>
                <td>@route.SourceStation</td>
                <td>@route.DestinationStation</td>
                <td>@route.DepartureTime</td>
                <td>@route.ArrivalTime</td>
                <td>@route.AvailableSeats</td>
                <td>@route.TotalSeats</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@route.TrainRouteId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@route.TrainRouteId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
