@model TrainTicketReservationSystem.Models.TrainRoute
@{
    ViewData["Title"] = "Edit Train Route";
}

<h2>Edit Train Route</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TrainRouteId" />
    <div class="form-group">
        <label asp-for="TrainId">Train</label>
        <select asp-for="TrainId" asp-items="ViewBag.Trains" class="form-control"></select>
        <span asp-validation-for="TrainId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SourceStation"></label>
        <input asp-for="SourceStation" class="form-control" />
        <span asp-validation-for="SourceStation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DestinationStation"></label>
        <input asp-for="DestinationStation" class="form-control" />
        <span asp-validation-for="DestinationStation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartureTime"></label>
        <input asp-for="DepartureTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalTime"></label>
        <input asp-for="ArrivalTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvailableSeats"></label>
        <input asp-for="AvailableSeats" class="form-control" />
        <span asp-validation-for="AvailableSeats" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalSeats"></label>
        <input asp-for="TotalSeats" class="form-control" />
        <span asp-validation-for="TotalSeats" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
