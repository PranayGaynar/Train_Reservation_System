@model TrainTicketReservationSystem.Models.Train

@{
    ViewData["Title"] = "Add Train";
}

<h2>Add Train</h2>

<form asp-action="AddTrain" method="post">
    @* Train Details *@
    <div class="form-group">
        <label asp-for="TrainName"></label>
        <input asp-for="TrainName" class="form-control" />
        <span asp-validation-for="TrainName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrainNumber"></label>
        <input asp-for="TrainNumber" class="form-control" />
        <span asp-validation-for="TrainNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrainType"></label>
        <select asp-for="TrainType" asp-items="ViewBag.TrainType" class="form-control">
            <option value="">Select Train Type</option>
        </select>
        <span asp-validation-for="TrainType" class="text-danger"></span>
    </div>

    @* Submit and Cancel Buttons *@
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="GetAllTrains" class="btn btn-secondary">Cancel</a>
    </div>
</form>

