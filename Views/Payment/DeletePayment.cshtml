@model TrainTicketReservationSystem.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this payment?</h4>
<hr />

<div>
    <h5>Payment Details</h5>
    <dl class="dl-horizontal">
        <dt>Payment ID</dt>
        <dd>@Model.PaymentId</dd>

        <dt>Booking PNR</dt>
        <dd>@Model.Booking.PNR</dd>

        <dt>Amount</dt>
        <dd>@Model.Amount</dd>

        <dt>Payment Status</dt>
        <dd>@Model.PaymentStatus</dd>

        <dt>Payment Date</dt>
        <dd>@Model.PaymentDate</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
